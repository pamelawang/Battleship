//  private CircularArrayStack last3Human;
//  private CircularArrayStack last3Comp; //undo stuff
  
  /***********************************************************************
   * Constructor: Creates a game. Each game has two players - human and 
   * computer - and a score.
   ***********************************************************************/
  public Game (String name) {
    username = name;
    human = new Player();
    computer = new Player();
    score = 0;
  }
  
  
  
  
  
  
  
